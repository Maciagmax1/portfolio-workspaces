---
import { getNav, keyDocuments } from "@/utils/sanity";
import "../styles/global.css";
import { Navigation } from "./Navigation";
import { MobileNavigation } from "./MobileNavigation";
import { slide } from "astro:transitions";
type Props = {};

const navContent = await getNav(keyDocuments.MAIN_NAV);
const {} = Astro.props;
---

<header
  class="flex justify-end p-4"
  transition:animate={slide({ duration: ".9s" })}
>
  <Navigation client:only navigationContent={navContent} />
  <MobileNavigation client:only navigationContent={navContent} />
</header>
